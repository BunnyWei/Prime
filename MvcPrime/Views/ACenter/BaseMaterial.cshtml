<script type="text/javascript">

    window.onload = function () {
        var xmlhttp;
        if (window.XMLHttpRequest) { // code for IE7+, Firefox, Chrome, Opera, Safari
            xmlhttp = new XMLHttpRequest();
        } else { // code for IE6, IE5
            xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
        }
        xmlhttp.onreadystatechange = function (data) {
            if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                var basedata = JSON.parse(xmlhttp.responseText);
                baselist = basedata.msg;
                if (basedata.code == 0) {

                } else {

                    for (var i = 0; i < baselist.length; i++) {

                        var device_id = baselist[i].medical_devices_id;

                        var device_name = baselist[i].medical_devices_name;
                        var device_amount = baselist[i].amount;
                        var device_price = baselist[i].unitprice;
                        var devicetext = "<tr id=\"" + device_id + "\"><td>" + device_id + "</td><td>" + device_name + "</td><td>" + device_amount + "</td><td>" + device_price + "</td></tr>";
                        $("#devicetable").append(devicetext);
                    }

                }

            }

        } //回调函数

        xmlhttp.open("get", "getDevice12", true);
        xmlhttp.send();
    }


</script>

