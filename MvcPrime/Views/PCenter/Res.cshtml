                    b[0] = data.seven;
                    b[1] = data.eight;
                    b[2] = data.nine;
                    b[3] = data.ten;
                    b[4] = data.thirteen;
                    b[5] = data.fourteen;
                    b[6] = data.fifteen;
                    b[7] = data.sixteen;

